<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authFragment">

    <fragment
        android:id="@+id/authFragment"
        android:name="ru.project.ui.AuthFragment"
        android:label="@string/authFragmentLabel"
        tools:layout="@layout/fragment_auth">
        <action
            android:id="@+id/action_authFragment_to_feedFragment"
            app:destination="@id/feedFragment" />
    </fragment>

    <fragment
        android:id="@+id/feedFragment"
        android:name="ru.project.ui.FeedFragment"
        android:label="@string/feedFragmentLabel"
        tools:layout="@layout/fragment_feed">
        <action
            android:id="@+id/action_feedFragment_to_authFragment"
            app:destination="@id/authFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="ru.project.ui.ProfileFragment"
        android:label="@string/profileFragmentLabel"
        tools:layout="@layout/fragment_profile">
    </fragment>

   <action android:id="@+id/toProfile" app:destination="@+id/profileFragment"/>

    <action android:id="@+id/toFeed" app:destination="@+id/feedFragment"/>
</navigation>